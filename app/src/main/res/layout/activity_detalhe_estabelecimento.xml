<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_estabelecimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/nome_estabelecimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/categoria_estabelecimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/descricao_estabelecimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/btn_chamada_telefonica"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/chamada_telefonica"
        android:contentDescription="Chamar Estabelecimento"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center" />
</LinearLayout>